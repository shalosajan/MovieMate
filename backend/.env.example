# Django / security
SECRET_KEY=changeme_replace_in_production
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost

# Database
# Example SQLite dev: sqlite:///db.sqlite3
# Example Postgres production: postgres://user:pass@hostname:5432/dbname
DATABASE_URL=sqlite:///db.sqlite3

# TMDB
TMDB_API_KEY=your_tmdb_api_key_here

# CORS - list of allowed origins (comma separated)
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173


# Superuser (for quick local seeding)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=password
